#!/bin/sh

MAILINGLIST=./names

while IFS= read -r n; do
        echo $n
        eval `echo $n | awk -F':' '{ print "\""$1"\"" "#" "\""$2"\"" "#" "\""$3"\""}' |\
        sed 's/^\(.*\)#\(.*\)#\(.*\)$/NAME=\1 SURNAME=\2 ADDRESS=\3/'`
        
	(echo "$NAME:"
	 echo ""
 echo "We would like to invite you to participate in the 19th Compiler-Driven"
 echo "Performance Workshop (CDP ‘22) which will be held on Tuesday November 15 2022." 
 echo "CDP is an in-person only event co-located with the International Conference on"
 echo "Computer Science and Software Engineering (CASCON 2022) which is a"
 echo "parte of WeaveSphere and will take place in Toronto, ON, Canada."
 echo ""
 echo "The workshop has a particular focus on (but not limited to):"
 echo ""
 echo "* Innovative compiler analysis, transformation, and optimization techniques"
 echo "* Languages, compilers, and optimization techniques for multicore processors and other parallel architectures"
 echo "* Compiling for streaming or heterogeneous hardware"
 echo "* Dynamic compilation for high-performance and real-time environments"
 echo "* Compilation, optimization, and analysis for dynamic languages"
 echo "* Compilation techniques for reducing power"
 echo "* Program safety"
 echo "* Whole system optimization and analysis"
 echo "* Tools and infrastructure for compiler research"
 echo ""
 echo "CDP 2019 invites contributions in the form of talk abstracts from"
 echo "researchers and practitioners. Each submission should include:"
 echo ""
 echo "* Talk title,"
 echo "* Author list with affiliations"
 echo "* A brief abstract."
 echo "* Please also identify the presenter and include a 1-2 sentence biography."
 echo ""
 echo "All submissions should be made through EasyChair no later than"
 echo "September 19th, 2022 in easychair:"
 echo ""
 echo "https://easychair.org/my/conference?conf=cdp22"
 echo ""
 echo "Registration for CASCON is required, for all attendees and"
 echo "speakers. Please see the registration tab at:"
 echo ""
 echo "  http://www.cascon.ca"
 echo ""
 echo "CDP does not publish proceedings. Presenters are required to provide"
 echo "an electronic copy of their slides. The slides will be available on"
 echo "this website soon after the workshop. Work that has been recently"
 echo "published or submitted for publication is welcome."
 echo ""
 echo "We look forward to your participation in CDP ‘19!"
 echo ""
 echo "CDP 2022 co-chairs:"
 echo "J. Nelson Amaral, University of Alberta"
 echo "Kit Barton, IBM Canada"

) | Mail -s "Your help with next Games Party" $ADDRESS
 done < "$MAILINGLIST"
